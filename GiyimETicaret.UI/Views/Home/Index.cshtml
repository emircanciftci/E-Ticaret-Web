
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model GiyimETicaret.UI.Models.HomeVM
<!-- Slider -->

<div id="Home" class="main_slider mt-5" style="background-image:url('/Assets/images/slider_1.jpg')">
    <div class="container fill_height">
        <div class="row align-items-center fill_height">
            <div class="col">
                <div class="main_slider_content">
                    <h6>İlkbahar / Yaz Koleksiyonu 2025</h6>
                    <h1>Yeni Gelenlerde %30'a Varan İndirim Kazanın</h1>
                    <div class="red_button shop_now_button"><a href="#">Alışverişe Başla</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="Categories">
    <div class="col text-center">
        <div class="section_title new_arrivals_title">
            <h2>Kategori</h2>
        </div>
    </div>
</div>
<div class="banner">
    <div class="col-10 container">
        <div class="product_slider_container">
            <div class="owl-carousel owl-theme product_slider">

                @foreach (var item in Model.CategoriesList)
                {
                    string imageUrl = item.ProductImages?.ImageURL ?? "/images/default.jpg"; // null ise varsayılan
                    <div class="owl-item product_slider_item">
                        <div class="product-item">
                            <div class=" product discount">

                                <div class="banner_item align-items-center" style="background-image:url(@imageUrl);width:100%;height:100%">
                                    <div class="banner_category">
                                        <a href="~/Categories/Index/@item.ID">@item.Name</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Slider Navigation -->

            <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
            <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
        </div>
    </div>
</div>

<!-- New Arrivals -->

<div class="new_arrivals" id="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>Yeni Gelenler</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col text-center">
                <div class="new_arrivals_sorting">
                    <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">Hepsi</li>
                        @foreach (var item in Model.CategoriesNewList)
                        {
                            <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter='.@item.Name'>@item.Name</li>

                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                    @foreach (var item in Model.ProductsNewList)
                    {

                        var Discounts = Model.DiscountsList?.FirstOrDefault(x => x.ProductID == item.ID);

                        <div class="product-item @item.Categories.Name">
                            <div onclick="window.location.href = '/Products/Index/@item.ID'" class="product product_filter">
                                <div class="product_image">
                                    <img src="@item.ProductImages.ImageURL" alt="">
                                </div>
                                <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>
                                @if (Discounts != null)
                                {
                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>%@Discounts.DiscountRate</span></div>
                                }
                                <div class="product_info">
                                    <div class="favorite"></div>
                                    <h6 class="product_name"><a href="/Products/Index/@item.ID">@item.Name</a></h6>
                                    @if (Discounts != null)
                                    {
                                        <div class="product_price">@(item.Price - (item.Price * Discounts.DiscountRate / 100)) ₺<span>@item.Price ₺</span></div>
                                    }
                                    else
                                    {
                                        <div class="product_price">@item.Price ₺</div>
                                    }
                                </div>
                            </div>
                            <div class="red_button add_to_cart_button"><a href="#">Sepete Ekle</a></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deal of the week. -->

<div class="deal_ofthe_week">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="deal_ofthe_week_img">
                    <img src="/Assets/images/deal_ofthe_week.png" alt="">
                </div>
            </div>
            <div class="col-lg-6 text-right deal_ofthe_week_col">
                <div class="deal_ofthe_week_content d-flex flex-column align-items-center float-right">
                    <div class="section_title">
                        <h2>Haftanın Fırsatı</h2>
                    </div>
                    <ul class="timer">
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="day" class="timer_num">03</div>
                            <div class="timer_unit">Gün</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="hour" class="timer_num">15</div>
                            <div class="timer_unit">Saat</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="minute" class="timer_num">45</div>
                            <div class="timer_unit">Dakika</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="second" class="timer_num">23</div>
                            <div class="timer_unit">Saniye</div>
                        </li>
                    </ul>
                    <div class="red_button deal_ofthe_week_button"><a href="#">Alışverişe Başla</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Best Sellers -->

<div class="best_sellers" id="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>En Çok Satanlar</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product_slider_container">
                    <div class="owl-carousel owl-theme product_slider">

                        <!-- Slide 1 -->
                        @foreach (var item in Model.ProductBestList)
                        {
                            var Discounts = Model.DiscountsList?.FirstOrDefault(x => x.ProductID == item.ID);

                            <div onclick="window.location.href = '/Products/Index/@item.ID'" class="owl-item product_slider_item">
                                <div class="product-item">
                                    <div class="product discount">
                                        <div class="product_image">
                                            <img src="@item.ProductImages.ImageURL" alt="">
                                        </div>
                                        @if (Discounts != null)
                                        {
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>%@Discounts.DiscountRate</span></div>
                                        }
                                        <div class="product_info">
                                            <h6 class="product_name"><a href="single.html">@item.Name</a></h6>
                                            @if (Discounts != null)
                                            {
                                                <div class="product_price">@(item.Price - (item.Price * Discounts.DiscountRate / 100)) ₺<span>@item.Price ₺</span></div>
                                            }
                                            else
                                            {
                                                <div class="product_price">@item.Price ₺</div>
                                            }
                                            <div class="favorite"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Slider Navigation -->

                    <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    </div>
                    <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function CategoriesClick(ID) {
        function myfunction() {
            $.ajax({
                url: '/Categories/Index',
                type: 'post',
                data: ID,
            })
        }
    }
</script>